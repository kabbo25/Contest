class Solution {
public:
    int maxProfit(vector<int>& prices) {
       int n=prices.size();
       prices.emplace_back(-1);
       int cur(prices.front()),ans(0);
       for(int i(0);i<=n;++i){
          if(i==0)cur=prices[0];
          else{
              if(prices[i]>prices[i-1])continue;
              ans+=prices[i-1]-cur;
              cur=prices[i];
          }
       }
       return ans;
    }
};